<!-- app/views/posts/edit.html.erb -->
<%= form_with model: @post, url: post_path(@post), method: :patch do |form| %>
  <% if @post.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3 mx-3">
      <ul>
        <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4 px-6 pt-2">
    <%= form.check_box :is_private, class: "mr-2 leading-tight" %>
    <%= form.label :is_private, "Limit to only this community", class: "text-sm font-medium text-gray-700" %>
  </div>

  <%= form.text_area :body, class: "border-b border-t-0 border-x-0 mb-6 px-6 pt-6 block w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 resize-none min-h-[180px] text-lg", placeholder: "A brief summary! (A few lines)", rows: 10, maxlength: 700, value: @post.body %>

  <%= form.text_area :datathing, class: "mb-6 border-b border-t-0 border-x-0 px-6 pt-6 block w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 resize-none min-h-[180px] text-lg", placeholder: "Elaborate (unlimited text, optional)", value: @post.datathing %>

  <%= form.text_field :image_link, class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "image google drive link (optional)", value: @post.image_link %>
  <%= form.text_field :video_link, class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "youtube video link (optional)", value: @post.video_link  %>
  <%= form.text_field :form_link, class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "Google form Link (optional)", type: "url" , value: @post.form_link %>


  <!-- Add more fields for other attributes as needed -->

  <div class="flex justify-end px-6 -mt-2">
    <%= form.submit "Update Post", class: "px-6 py-2 bg-amber-700 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-amber-800 transition ease-in-out duration-300" %>
  </div>
<% end %>