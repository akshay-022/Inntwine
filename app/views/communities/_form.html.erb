<%= form_with model: @post, url: { controller: "posts", action: "create" }, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |form| %>
  <% if flash[:post_errors] %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3 mx-3">
      <ul>
        <% flash[:post_errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag 'topic_id', params['topic_id'] %>

  <div class="mb-4 px-6 pt-2">
    <%= form.check_box :is_private, name: 'post[is_private]', class: "mr-2 leading-tight" %>
    <%= form.label :is_private, "Limit to only this community", class: "text-sm font-medium text-gray-700" %>
  </div>

  <%= form.text_area :body, name: 'post[body]', class: "border-b border-t-0 border-x-0 mb-6 px-6 pt-6 block w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 resize-none min-h-[180px] text-lg", placeholder: "A brief summary! (2-3 lines)", rows: 3, maxlength: 300 %>
  <%= form.text_area :datathing, name: 'post[datathing]', class: "mb-6 border-b border-t-0 border-x-0 px-6 pt-6 block w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 resize-none min-h-[180px] text-lg", placeholder: "Elaborate (unlimited text, optional)" %>

  <%= form.text_field :q1, name: 'post[q1]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "q1 (optional)" %>
  <%= form.text_field :q1_args, name: 'post[q1_args]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "q1 options (comma separated)" %>

  <%= form.text_field :q2, name: 'post[q2]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "q2 (optional)" %>
  <%= form.text_field :q2_args, name: 'post[q2_args]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "q2 options (comma separated)" %>

  <%= form.text_field :image_link, name: 'post[image_link]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "image google drive link (optional)" %>
  <%= form.text_field :video_link, name: 'post[video_link]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "youtube video link (optional)" %>
  <%= form.text_field :form_link, name: 'post[form_link]', class: "mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg", placeholder: "Google form Link (optional)", type: "url" %>

  <div class="mb-3 border-b border-t-0 border-x-0 px-6 pt-2 w-full border-gray-200 focus:shadow-none focus:outline-none focus:ring-transparent focus:border-gray-300 text-lg">
    <%= form.label :post_category, name: 'post[post_category]', class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :post_category, options_for_select([["Idea", "idea"], ["Problem", "problem"], ["Work", "work"], ["Information", "information"], ["Discussion", "discussion"]]), {}, { name: 'post[post_category]', class: "w-full bg-white border border-gray-300 p-2 rounded-md focus:outline-none focus:border-amber-500 focus:ring focus:ring-amber-200 focus:ring-opacity-50" } %>  
  </div>


  <div class="flex justify-end px-6 -mt-2"> <!-- Adjusted margin-top value -->
    <%= form.submit "Post", class: "px-6 py-2 bg-amber-700 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-amber-800 transition ease-in-out duration-300" %>
  </div>


<% end %>

