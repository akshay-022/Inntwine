<div id="<%= dom_id user_organization %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= user_organization.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Organization:</strong>
    <%= user_organization.organization_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this user organization", user_organization, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this user organization", edit_user_organization_path(user_organization), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
